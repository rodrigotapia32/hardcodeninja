modules = ["python-3.11", "nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Hardcore Ninja Game Importer"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Hardcore Ninja Game"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Hardcore Ninja Game Server"

[[workflows.workflow]]
name = "Hardcore Ninja Game Importer"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Hardcore Ninja Game"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd hardcore_ninja_game && node server/index.js"
waitForPort = 5001

[[workflows.workflow]]
name = "Hardcore Ninja Game Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd hardcore_ninja_game && node server/index.js"
waitForPort = 5001

[deployment]
run = ["sh", "-c", "python main.py"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3001
